<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.briankhuu.nfcmessageboard">

    <!-- Tutorial used: "Reading NFC Tags with Android, by Ralf Wondratschek 2013" -->
    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- windowwSoftInputMode http://stackoverflow.com/questions/1555109/stop-edittext-from-gaining-focus-at-activity-startup -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainScreen"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">

            <!-- We want to autodetect NDEF text -->
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>

            <!-- This Indicates that this is the first activity page of this app, reachable from app screen -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReadMe"
            android:label="@string/title_activity_read_me" />
        <activity android:name=".WritingToTextTag" />

        <!-- This is the temporary entry point to access other activities -->
        <activity android:name=".TestPage">

            <!--
            This Indicates that this is the first activity page of this app, reachable from app screen
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity android:name=".TextTagCreation" />
        <activity android:name=".ReadHtmlTags">
            <!-- We want to autodetect NDEF text -->
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/html" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/html+gzip" />
            </intent-filter>
        </activity>
        <activity android:name=".TagDiagnostics"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize">

            ></activity>
    </application>

</manifest>